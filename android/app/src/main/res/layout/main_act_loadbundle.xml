<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="这个页面时还是原生页面，只加载了基础的jsbundle到内存中，点击以下两个按钮分别进入到react native业务1和2" />

    <Button
        android:id="@+id/btn_go_buz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="进入RN业务1" />
    android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_go_buz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="进入RN业务2" />

    <Button
        android:id="@+id/btn_go_buz3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="进入RN业务3" />


    <com.beng.react.ui.RNBundleView
        android:id="@+id/testFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>